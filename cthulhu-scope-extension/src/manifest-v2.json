{
  "manifest_version": 2,
  "version":"6.11",
  "name": "Cthulhu-Scope-Extension",
  "description": "和CthulhuRs server辅助搭配使用，用于更细粒度的域控制",
  "homepage_url": "https://server.cthulhu.fun/",
  "default_locale": "en",
  "permissions": [
    "storage",
    "webRequest",
    "webNavigation",
    "identity",
    "identity.email",
    "webRequestBlocking",
    "<all_urls>"
  ],
  "icons": {
    "16": "assets/icon/logo.png",
    "32": "assets/icon/logo.png",
    "48": "assets/icon/logo.png",
    "128": "assets/icon/logo.png"
  },
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "index.html",
    "default_icon": {
      "16": "assets/icon/logo.png",
      "32": "assets/icon/logo.png",
      "48": "assets/icon/logo.png",
      "128": "assets/icon/logo.png"
    }
  },
  "web_accessible_resources": [
    "img/*",
    "icon/*",
    "js/*"
  ],
  "content_security_policy": "script-src 'self'; object-src 'self'; frame-src 'self'; child-src 'self';"
}
